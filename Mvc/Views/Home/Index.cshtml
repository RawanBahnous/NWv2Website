@model Mvc.Models.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<style>
        body{
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        overflow-x:hidden;
        background-color:aliceblue
      
      }
      
      .row {
        margin-top: 5px;
      }

      .b-left {
        border-left: 2px solid #302a1f;
      }
      
      
    .bg-dark-button{
        color:ghostwhite;
        padding:2px 10px;
        cursor:pointer;
        text-decoration:none;
        background-color:black;
        transition:1s ease;
    }

    .bg-dark-button:hover{
        color:white;
       padding: 2px 25px;
    }

    .hover-img-content {
        display: none;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(0, 0, 0, 0.8);
        padding: 10px;
        color: #fff;
        text-align: center;
        transition:1s ease;
    }

    .hover-img:hover .hover-img-content {
        display: block;
      
    }

    .hover-img img {
        border:1px solid white;
        transition: 1s ease;
    }

    .hover-img img:hover {
       width:400px;
   }
    .font{
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-size:60px;
        color:black
    }

    #myCarousel {
        margin: 0;
        padding: 0;
    }

    .carousel-inner {
        margin: 0;
        padding: 0;
    }

    .carousel-inner > .item {
        margin: 0;
        padding: 0;
    }

    .carousel-inner > .item > img {
        margin: 0;
        padding: 0;
    }


</style>

@{
    var topThreeNews = Model.News.Take(4);
}


<div class="container-fluid m-padding">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
     
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/images/th (1).jpg" alt="Los Angeles" style="width:100%; height:400px">
                <div class="carousel-caption">
                    <h3 class="animated fadeInRight">Latest Updates</h3>
                    <p class="animated fadeInRight">Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/images/th (2).jpg" alt="Chicago" style="width:100%; height:400px">
                <div class="carousel-caption">
                    <h3 class="animated fadeInRight">Breaking News</h3>
                    <p class="animated fadeInRight">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/images/th.jpg" alt="New york" style="width:100%; height:400px">
                <div class="carousel-caption">
                    <h3 class="animated fadeInRight">Breaking News</h3>
                    <p class="animated fadeInRight">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="row mt-5">
    <div class="col-12">
        <div class="row justify-content-center mt-5 mb-5">
            <div class="col-md-6 text-center">
                <h1 class="font">What's New?
                    <img src="~/images/logo.png" width="50px" height="50px" />
                    
                </h1>
                <p>Discover News now</p>
                <p>NW Website is a unique website designed to make You feel that you are read a paper
                    
                    Regardless for All Modern Designs
                </p>
                

                <h3 >Top News</h3>
                
                <div class="row justify-content-center">
                    @foreach (var newsItem in topThreeNews)
                    {
                        <div class="col-md-6 col-lg-3">
                            <div class="row justify-content-center hover-img" >
                                <img src="~/images/1.jpg" style="width:150px;height100px">
                            </div>
                           <div>
                               @* <h3>@newsItem.Title</h3>
                                <p>@newsItem.Content</p>*@
                                <p>Author: @Model.Authors.FirstOrDefault(a => a.Id == newsItem.AuthorID)?.Name</p>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center mt-5">
        
        <div class="col-md-6">
            <div class="text-right">
                <p class="mb-2">
                    <a href="@Url.Action("SortByDate", "Home", new { sortBy = "newsasc" })" class="text-decoration-none">Sort by OLD News Date (Ascending)</a> |
                    <a href="@Url.Action("SortByDate", "Home", new { sortBy = "newsdesc" })" class="text-decoration-none">Sort by New News Date (Descending)</a>

                </p>

               
            </div>
        </div>
    </div>
</div>



<div class="container">
   
    <div class="col-md-12">
        <section>
            <div class="row">
                @foreach (var news in Model.News)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card h-100">
                            <a href="@Url.Action("DetailsNews", "Home", new { id = news.Id })">
                                <img src="~/images/1.jpg" alt="@news.Title" class="card-img-top" />
                            </a>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <a href="@Url.Action("DetailsNews", "Home", new { id = news.Id })">@news.Title</a>
                                </h5>
                                <p class="card-text">@news.Content</p>
                                <div class="mt-auto">
                                    <div class="row justify-content-between">
                                        <div class="col-md-3">
                                            <p>@news.PublicationDate.ToString("yyyy,M,MMM")</p>
                                        </div>
                                        <div class="col-md-5">
                                            <p><strong>Author:</strong> @Model.Authors.FirstOrDefault(a => a.Id == news.AuthorID)?.Name</p>
                                        </div>
                                    </div>
                                    <div class="row justify-content-end">
                                        <div class="col-md-12">
                                            <a class="btn btn-dark" href="@Url.Action("DetailsNews", "Home", new { id = news.Id })">Show News Details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>


