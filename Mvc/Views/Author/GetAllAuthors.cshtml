@model IEnumerable<Mvc.Models.Author>

@{
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
    ViewData["Title"] = "GetAllAuthors";
}
<div class="container m-lg-5">
    <div class="row justify-content-center">
        <div class="col-md-8 justify-content-center">

    <h1>Authors List</h1>
    <p>
        <a asp-action="CreateNewAuthor" class="btn btn-primary">Add Author</a>
    

    <form asp-controller="Authors" asp-action="SearchAuthors" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="searchTerm">Name:</label>
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search By Author Name"/>
                </div>
            </div>
            <div class="col-md-6 mt-4">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </div>
    </form>
    </p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 justify-content-center">

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "DetailsAuthors", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                                </td>
                                <td>
                                    <form asp-action="DeleteAuthor" asp-controller="Author" asp-route-id="@item.Id" onsubmit="return confirm('Are you sure you want to delete this author?');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

    </div>
    </div>

</div>